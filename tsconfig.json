{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "jsx": "react",
    "types": [
      "node"
    ]
  },
  "filesGlob": [
    "src/**/*.tsx",
    "src/**/*.ts"    
  ],
  "exclude": [
    "node_modules"
  ]
}
